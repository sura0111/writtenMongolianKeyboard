{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}