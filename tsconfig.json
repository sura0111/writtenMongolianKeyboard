{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "types": ["./@types/namespaces"],
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}